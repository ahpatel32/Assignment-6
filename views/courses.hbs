<div class="row">
     <div class="col-md-12 d-flex justify-content-between align-items-center">
        <h2>Courses</h2>
        <a href="/courses/add" class="btn btn-success">Add New Course</a>
    </div>
    <hr />
        {{#if courses.length}}
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Course Code</th>
                        <th>Course Description</th>
                        <th></th> <!-- Header for remove column -->
                    </tr>
                </thead>
                <tbody>
                    {{#each courses}}
                    <tr>
                        <td><a href="/course/{{this.courseId}}">{{this.courseCode}}</a></td>
                        <td><a href="/students?course={{this.courseId}}">{{this.courseDescription}}</a></td>
                        <td>
                            <a href="/course/delete/{{this.courseId}}" class="btn btn-danger">Remove</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        {{else}}
        <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
        </div>
        {{/if}}
    </div>
</div>
